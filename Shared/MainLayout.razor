</MudLayout>

@code {
     MudTheme MyCustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.BlueGrey.Darken1,
            PrimaryContrastText = Colors.Shades.White,
            Secondary = Colors.DeepOrange.Accent4,
            SecondaryContrastText = Colors.Shades.White,
            Tertiary = Colors.Indigo.Darken2,
            TertiaryContrastText = Colors.Shades.White,
            AppbarBackground = Colors.BlueGrey.Darken1,
        }
    };
    
    bool LeftDrawerOpen = true;

    void LeftDrawerToggle()
    {
        LeftDrawerOpen = !LeftDrawerOpen;
    }
    bool RightDrawerOpen = false;

    void RightDrawerToggle()
    {
        RightDrawerOpen = !RightDrawerOpen;
    }


}
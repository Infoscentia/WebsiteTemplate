@inherits LayoutComponentBase

<MudThemeProvider Theme="MyCustomTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2" Color="Color.Primary" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => LeftDrawerToggle())" />
        <TopMenu />
        <MudSpacer />
        <MudBadge Dot="true" Overlap="true" Color="Color.Secondary" Class="mx-0 my-0">
            <MudIconButton OnClick="@RightDrawerToggle" Icon="@Icons.Sharp.ShoppingCart" Color="Color.Inherit"/>
        </MudBadge>
        <MudMenu Icon="@Icons.Sharp.Person" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <MudMenuItem>Sign In</MudMenuItem>
            <MudMenuItem>Something else</MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="LeftDrawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MudBlazorTemplates1</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudDrawer  @bind-Open="@RightDrawerOpen" Anchor="Anchor.End" Elevation="8" Width="250px" ClipMode="DrawerClipMode.Always" Color="Color.Surface">
        <MudCard Class="ma-2">
